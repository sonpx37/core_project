{
  "name": "angular-motoko-core-project",
  "version": "0.0.1",
  "author": {
    "name": "Son Pham",
    "email": "sonpx37@gmail.com",
    "url": "https://github.com/sonpx37"
  },
  "scripts": {
    "build": "ng build",
    "prebuild": "npm run copy:types",
    "prestart": "npm run copy:types",
    "copy:types": "rsync -avr .dfx/$(echo ${DFX_NETWORK:-'**'})/canisters/** --exclude='assets/' --exclude='idl/' --exclude='*.wasm' --delete src/declarations",
    "ng-start-dfx": "dfx stop && dfx start --clean --emulator",
    "ng-start": "npm run ng-start-dfx && dfx generate && dfx canister create backend && dfx canister create www && npm run ng-serve && npm run print-ng",
    "ng-serve": "dfx canister create backend && dfx canister create www && dfx generate && concurrently -k \"npm run ng-watch-motoko\" \"ng serve\" ",
    "ng-build-backend": "dfx deploy backend --argument '(\"Ethereum\",\"ETH\")'",
    "ng-watch-motoko": "nodemon --watch src --ext mo -x \"npm run ng-build-backend && npm run print-dfx-www\"",
    "ng-deploy": "dfx deploy www --argument '(\"Ethereum\",\"ETH\")'  && npm run print-dfx-www",
    "build-dfx-www": "npm run ng-start-dfx && dfx deploy backend --argument '(\"Ethereum\",\"EH\")' && npm run print-dfx-www",
    "print-dfx-www": "echo local IC server: http://localhost:8000/?canisterId=$(dfx canister id www)",
    "print-ng": "echo local Angular server: http://localhost:4200",
    "ng-deploy-ic": "dfx deploy --network ic www --argument '(\"Ethereum\",\"ETH\")'  && npm run print-dfx-www"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.0",
    "@angular/cdk": "^12.2.13",
    "@angular/common": "~12.2.0",
    "@angular/compiler": "~12.2.0",
    "@angular/core": "~12.2.0",
    "@angular/forms": "~12.2.0",
    "@angular/platform-browser": "~12.2.0",
    "@angular/platform-browser-dynamic": "~12.2.0",
    "@angular/router": "~12.2.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^12.1.3",
    "@angular-devkit/build-angular": "~12.2.3",
    "@angular/cli": "~12.2.3",
    "@angular/compiler-cli": "~12.2.0",
    "@types/jasmine": "~3.8.0",
    "@types/node": "^12.11.1",
    "jasmine-core": "~3.8.0",
